<h1>タスク一覧</h1>
<table>
<thead>
  <tr>
    <th>タスク名</th>
    <th>予定日</th>
  </tr>
</thead>
<tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.scheduled_on %></td>
        <td><%= link_to("削除","/tasks/#{task.id}/destroy",{method: "delete"}) %></td>
        </tr>
    <% end %>
</tbody>
</table>
